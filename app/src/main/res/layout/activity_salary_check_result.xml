<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/testingbg"
    android:paddingTop="?attr/actionBarSize"
    tools:context="com.example.dennislam.myapplication.activity.SalaryCheckResultActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_view"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary Distribution Chart"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_weight="9"
                    android:id="@+id/salarydistributionTV"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/relevantDataButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RELEVANT SALARY DATA"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>